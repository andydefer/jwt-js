{
    "compilerOptions": {
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020"
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts"
    ],
    "include": [
        "src"
    ]
}